{
	"name": "wfit-app",
	"version": "0.1.0",
	"description": "Wait For It - App",
	"main": "main.js",
	"author": "Bastien Cl√©ment",
	"repository": {
		"type": "git",
		"url": "https://github.com/galedric/wfit.git"
	},
	"dependencies": {
		"electron-updater": "^2.8.7"
	},
	"build": {
		"appId": "fr.waitforit.app",
		"productName": "Wait For It",
		"directories": {
			"output": "target"
		},
		"files": [
			"**/*",
			"build/icon.*"
		],
		"win": {
			"target": "nsis-web",
			"publish": "github"
		},
		"nsis": {
			"oneClick": true,
			"createDesktopShortcut": false,
			"deleteAppDataOnUninstall": true,
			"artifactName": "${productName} Setup.${ext}"
		}
	}
}
